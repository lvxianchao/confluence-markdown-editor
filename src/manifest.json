{
    "manifest_version": 3,
    "name": "Confluence Markdown Editor",
    "description": "A Markdown editor for Confluence.",
    "version": "2.4",
    "homepage_url": "https://www.github.com/lvxianchao/confluence-markdown-editor",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "options_page": "pages/options.html",
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "pages/editor.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "sandbox": {
        "pages": [
            "pages/editor.html"
        ]
    },
    "background": {
        "service_worker": "js/background.js"
    }
}